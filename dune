(executable
  (name squirrel)
  (libraries squirrellib)
  (modules squirrel))

(test
  (name test)
  (libraries squirrellib)
  (modules test)
  (action (run %{test} --compact))
  ;; some tests rely on *.sp files in tests/ and theories/
  (deps (source_tree tests) (source_tree theories)) 
  (instrumentation (backend bisect_ppx)))
